<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="model.TestSession" table="Test_Session">

        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>

        <property name="testResult" column="test_result" type="java.lang.Integer"/>

        <property name="submitDate" column="submit_date" type="java.util.Date"/>

        <many-to-one name="userId" class="model.Users" lazy="false">
            <column name="user_id" not-null="true"/>
        </many-to-one>

        <many-to-one name="testsId" class="model.Tests" lazy="false">
            <column name="test_id" not-null="true"/>
        </many-to-one>

        <list name="questionResultses" table="Question_Results" lazy="false">
            <key column="test_session_id"/>
            <list-index column="id"/>
            <one-to-many class="model.QuestionResults"/>
        </list>

    </class>
</hibernate-mapping>