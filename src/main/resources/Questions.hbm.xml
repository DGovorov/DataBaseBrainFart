<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="model.Questions" table="Questions">
        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property name="content" column="content" type="java.lang.String"/>
        <property name="value" column="value" type="java.lang.Integer"/>

        <set name="questionConnectionses" table="Question_Connections">
            <key>
                <column name="question_id"></column>
            </key>
            <one-to-many class="model.QuestionConnections"/>
        </set>

        <set name="answerOptionses" table="Answer_Options">
            <key>
                <column name="questions_id"></column>
            </key>
            <one-to-many class="model.AnswerOptions"/>
        </set>

    </class>
</hibernate-mapping>