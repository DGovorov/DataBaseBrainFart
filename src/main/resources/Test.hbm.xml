<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="model.Tests" table="Tests">

        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>

        <property name="name" column="name" type="java.lang.String"/>

        <many-to-one name="subjectId" class="model.Subjects" lazy="false">
            <column name="subject_id" not-null="true"/>
        </many-to-one>

        <property name="description" column="description" type="java.lang.String"/>

        <property name="publicity" column="publicity" type="java.lang.Boolean"/>

        <property name="img" column="img" type="java.lang.String"/>

        <many-to-one name="adminId" class="model.Admins" lazy="false">
            <column name="admin_id" not-null="true"/>
        </many-to-one>

        <list name="questionConnectionses" table="Question_Connections" lazy="false">
            <key column="test_id" not-null="true"/>
            <list-index column="questionConnections_id"/>
            <one-to-many class="model.QuestionConnections"/>
        </list>

        <list name="testAvailabilityes" table="Test_Availability" lazy="false">
            <key column="test_id" not-null="true"/>
            <list-index column="testAvailability_id"/>
            <one-to-many class="model.TestAvailability"/>
        </list>

        <list name="testSessions" table="Test_Session" lazy="false">
            <key column="test_id" not-null="true"/>
            <list-index column="testSession_id"/>
            <one-to-many class="model.TestSession"/>
        </list>

    </class>
</hibernate-mapping>