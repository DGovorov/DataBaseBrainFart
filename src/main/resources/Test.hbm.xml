<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="model.Tests" table="Tests">
        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="description" column="description" type="java.lang.String"/>
        <property name="publicity" column="publicity" type="java.lang.Boolean"/>

        <many-to-one name="subjectId" class="model.Subjects">
            <column name="subject_id" not-null="true"></column>
        </many-to-one>

        <set name="questionConnectionses" table="Question_Connections">
            <key>
                <column name="test_id"></column>
            </key>
            <one-to-many class="model.QuestionConnections"/>
        </set>

        <set name="testAvailabilityes" table="Test_Availability">
            <key>
                <column name="test_id"></column>
            </key>
            <one-to-many class="model.TestAvailability"/>
        </set>


    </class>
</hibernate-mapping>