<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="model.Subjects" table="Subjects">

        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>

        <property name="subject" column="subject" type="java.lang.String"/>

        <list name="testses" table="Tests" lazy="false">
            <key column="subject_id" not-null="true"/>
            <list-index column="tests_id"/>
            <one-to-many class="model.Tests"/>
        </list>

    </class>
</hibernate-mapping>