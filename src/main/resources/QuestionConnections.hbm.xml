<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="model.QuestionConnections" table="Question_Connections">

        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>

        <many-to-one name="testsId" class="model.Tests" insert="false" update="false">
            <column name="test_id" />
        </many-to-one>

        <many-to-one name="questionId" class="model.Questions" insert="false" update="false">
            <column name="question_id" />
        </many-to-one>

        <list  name="questionResultses" table="Question_Results" lazy="false">
            <key column="qc_id" />
            <list-index column="id"/>
            <one-to-many class="model.QuestionResults"/>
        </list>

    </class>
</hibernate-mapping>