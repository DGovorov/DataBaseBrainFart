<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="model.AnswerOptions" table="Answer_Options">

        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>

        <property name="content" column="content" type="java.lang.String"/>

        <property name="correctness" column="correctness" type="java.lang.Boolean"/>

        <property name="img" column="img" type="java.lang.String"/>

        <many-to-one name="questionsId" class="model.Questions" insert="false" update="false">
            <column name="questions_id" />
        </many-to-one>

    </class>
</hibernate-mapping>