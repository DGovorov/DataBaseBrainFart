<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="model.Tests" table="Tests">

        <id name="id" column="id">
            <generator class="native"/>
        </id>

        <discriminator column="type" type="character"/>

        <property name="name" column="name" type="java.lang.String"/>
        <property name="description" column="description" type="java.lang.String"/>
        <property name="publicity" column="publicity" type="java.lang.Boolean"/>
        <property name="img" column="img" type="java.lang.String"/>


        <set name="authors" table="author_work">
            <key column name="work_id"/>
            <many-to-many class="Author" column name="author_id"/>
        </set>


        <subclass name="model.TestSession">
            <property name="id"/>
            <property name="testsId"/>
            <property name="userId"/>
            <property name="submitDate"/>
            <property name="testResult"/>
        </subclass>

        <subclass name="model.TestAvailability">
            <property name="id"/>
            <property name="testsId"/>
            <property name="endDate"/>
            <property name="startDate"/>
        </subclass>

    </class>

</hibernate-mapping>